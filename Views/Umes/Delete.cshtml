@model Eureka.Models.Um

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Styles
{
@await Html.PartialAsync("_CssDetailsDelete")
}
@{
string[] info = { "Umes", "eliminar" };
}
@await Html.PartialAsync("_Breadcrumb", info)


<div class="col-md-4 col-md-offset-4">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <div class="panel-control">
                <ul class="pager pager-rounded">
                        <li><a asp-action="edit" class="btn btn-mint" asp-route-id="@Model.Id"><span class="ion-edit"></span> Editar Um</a></li>
                        <li><a asp-action="details" class="btn btn-info" asp-route-id="@Model.Id"><span class="ion-android-list"></span> Detalles</a></li>
                </ul>
            </div>
                        <h3 class="panel-title">Eliminar Um #@Html.DisplayFor(model => model.Id)</h3>
        </div>
        <div class="panel-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Descripcion):
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Estado):
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Estado.Descripcion)
                        </dd>
                </dl>
                
                    <form class="delete-confirm" asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                        <button type="submit" id="btnEliminar" class="btn btn-danger btn-block"><span class="ion-close"></span> Eliminar permanentemente</button>
                        <hr class="new-section-sm">
                        <a class="btn btn-sm btn-default" asp-action="index"><i class="ion-arrow-left-b ion-14px"></i> Regresar al listado</a>
                    </form>
                    
                </div>
            </div>
        </div>
    @section Scripts {
    @await Html.PartialAsync("_ScriptsDELETE","um")
    }
