@model Eureka.Models.Categoria
        @{
        ViewData["Title"] = "Details";
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
        @section Styles
        {
        @await Html.PartialAsync("_CssDetailsDelete")
        }
        @{
        string[] info = { "Categorias", "detalle" };
        }
        @await Html.PartialAsync("_Breadcrumb", info)
<div class="col-md-5">
    <div class="panel panel-info">
        <div class="panel-heading">
                        <div class="panel-control">
                            <ul class="pager pager-rounded">
                                <li><a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-mint btn-rounded"><i class="ion-edit"></i> Editar Categoria</a></li>
                                <li><a asp-action="delete" asp-route-id="@Model.Id" class="btn btn-danger btn-rounded"><span class="ion-close"></span> Eliminar Categoria</a></li>
                            </ul>
                        </div>
                        <h3 class="panel-title">Detalle del Categoria #@Html.DisplayFor(model => model.Id)</h3>
        </div>
        <div class="panel-body">
            <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Descripcion) :
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.Nota) :
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Nota)
                            </dd>
            </dl>
                <hr class="new-section-sm">
                <a class="btn btn-sm btn-default" asp-action="index"><i class="ion-arrow-left-b ion-14px"></i> Regresar al listado</a>
        </div>
    </div>

</div>

        @section Scripts {
        @await Html.PartialAsync("_ScriptsCRUD")
        @await Html.PartialAsync("_ScriptsDETAILS")
        <environment include="Development">
            <script src="~/js/models/categoria.model.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/js/models/categoria.min.js" asp-append-version="true"></script>
        </environment>
        <script>
                //
        </script>
        }

