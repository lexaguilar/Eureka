@model Eureka.Models.Categoria

@{
    ViewData["Title"] = "Editar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
   @await Html.PartialAsync("_CssCRUD")
}

@{
string[] info = { "Categorias", "editar" };
}
@await Html.PartialAsync("_Breadcrumb", info)
   <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-mint" id="panel-updatable">
        <div class="panel-heading">
            <div class="panel-control">
                <ul class="pager pager-rounded">
                    <li><a asp-action="delete" class="btn btn-danger btn-rounded" asp-route-id="@Model.Id"><i class="ion-close ion-14px"></i> Eliminar Categoria</a></li>
                    <li><a asp-action="details" class="btn btn-info pull-right" asp-route-id="@Model.Id"><span class="ion-android-list"></span> Detalles</a></li>
                </ul>
            </div>
            <h3 class="panel-title">Editar Categoria</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                        <input type="hidden" asp-for="Id" />
                                <div class="col-md-12 form-group">
                                    <label asp-for="Descripcion" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.Descripcion) :</label>
                                    <div class="col-lg-8">
                                        <a href="#" id="Descripcion" class="eu-editable validate font-16">@Model.Descripcion</a>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <label asp-for="Nota" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.Nota) :</label>
                                    <div class="col-lg-8">
                                        <a href="#" id="Nota" class="eu-editable validate font-16">@Model.Nota</a>
                                    </div>
                                </div>
            </div>
            <div class="form-group demo-nifty-btn">
                <button id="btnGuardar" type="button" class="btn btn-mint btn-block"><i class="ion-checkmark ion-14px"></i> Actualizar</button>
            </div>
            <hr class="new-section-sm">
            <a class="btn btn-sm btn-default" asp-action="index"><i class="ion-arrow-left-b ion-14px"></i> Regresar al listado</a>
        </div>
    </div>
</div>
        @section Scripts {
        @await Html.PartialAsync("_ScriptsCRUD")
        @await Html.PartialAsync("_ScriptsCU", "categoria")
        <environment include="Development">
            <script src="~/js/models/categoria.model.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/js/models/categoria.min.js" asp-append-version="true"></script>
        </environment>
        }
