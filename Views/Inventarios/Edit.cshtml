@model Eureka.Models.Inventario

@{
    ViewData["Title"] = "Editar Inventario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles
{
   @await Html.PartialAsync("_CssCRUD")
}

@{
string[] info = { "Inventarios", "editar" };
}
@await Html.PartialAsync("_Breadcrumb", info)
   <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-mint" id="panel-updatable">
        <div class="panel-heading">
            <div class="panel-control">
                <ul class="pager pager-rounded">
                    <li><a asp-action="delete" class="btn btn-danger btn-rounded" asp-route-id="@Model.Id"><i class="ion-close ion-14px"></i> Eliminar Inventario</a></li>
                    <li><a asp-action="details" class="btn btn-info pull-right" asp-route-id="@Model.Id"><span class="ion-android-list"></span> Detalles</a></li>
                </ul>
            </div>
            <h3 class="panel-title">Editar Inventario</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                        <input type="hidden" asp-for="Id" />
                                <div class="col-md-12 form-group">
                                    <label asp-for="Nombre" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.Nombre) :</label>
                                    <div class="col-lg-8">
                                        <a href="#" id="Nombre" class="eu-editable validate font-16">@Model.Nombre</a>
                                    </div>
                                </div>
                                <div class="col-md-12 form-group">
                                    <label asp-for="Descripcion" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.Descripcion) :</label>
                                    <div class="col-lg-8">
                                        <a href="#" id="Descripcion" class="eu-editable validate font-16">@Model.Descripcion</a>
                                    </div>
                                </div>
                            <div class="col-md-12 form-group">
                                <label asp-for="Um" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.Um) :</label>
                                <div class="col-lg-8">
                                    <select asp-for="Um" class="eu-selectize" asp-items="ViewBag.Um"><option value="">Seleccione</option></select>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <label asp-for="FamiliaId" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.FamiliaId) :</label>
                                <div class="col-lg-8">
                                    <select asp-for="FamiliaId" class="eu-selectize" asp-items="ViewBag.FamiliaId"><option value="">Seleccione</option></select>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <label asp-for="PresentacionId" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.PresentacionId) :</label>
                                <div class="col-lg-8">
                                    <select asp-for="PresentacionId" class="eu-selectize" asp-items="ViewBag.PresentacionId"><option value="">Seleccione</option></select>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <label asp-for="EstadoId" class="col-md-4 font-16">@Html.DisplayNameFor(model => model.EstadoId) :</label>
                                <div class="col-lg-8">
                                    <select asp-for="EstadoId" class="eu-selectize" asp-items="ViewBag.EstadoId"><option value="">Seleccione</option></select>
                                </div>
                            </div>
            </div>
            <div class="form-group demo-nifty-btn">
                <button id="btnGuardar" type="button" class="btn btn-mint btn-block"><i class="ion-checkmark ion-14px"></i> Actualizar</button>
            </div>
            <hr class="new-section-sm">
            <a class="btn btn-sm btn-default" asp-action="index"><i class="ion-arrow-left-b ion-14px"></i> Regresar al listado</a>
        </div>
    </div>
</div>
        @section Scripts {
        @await Html.PartialAsync("_ScriptsCRUD")
        @await Html.PartialAsync("_ScriptsCU", "inventario")
        <environment include="Development">
            <script src="~/js/models/inventario.model.js" asp-append-version="true"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/js/models/inventario.min.js" asp-append-version="true"></script>
        </environment>
        }
